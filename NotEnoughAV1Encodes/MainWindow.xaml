                                <ComboBoxItem Content="bilinear"/>
                                <ComboBoxItem Content="bicubic" IsSelected="True"/>
                                <ComboBoxItem Content="experimental"/>
                                <ComboBoxItem Content="neighbor"/>
                                <ComboBoxItem Content="area"/>
                                <ComboBoxItem Content="bicublin"/>
                                <ComboBoxItem Content="gauss"/>
                                <ComboBoxItem Content="sinc"/>
                                <ComboBoxItem Content="lanczos"/>
                                <ComboBoxItem Content="spline"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="GroupBoxRotate" Header="{lex:Loc}" HorizontalAlignment="Left" Height="92" Margin="14,10,0,0" VerticalAlignment="Top" Width="274" mah:ControlsHelper.ContentCharacterCasing="Normal">
                        <Grid IsEnabled="{Binding IsOn, ElementName=ToggleSwitchFilterRotate}">
                            <Label x:Name="LabelRotate" Content="{lex:Loc}" HorizontalAlignment="Right" Margin="0,20,129,0" VerticalAlignment="Top" Height="28" HorizontalContentAlignment="Right" Width="146" />
                            <ComboBox x:Name="ComboBoxFiltersRotate" HorizontalAlignment="Left" Margin="151,18,0,0" VerticalAlignment="Top" Width="65" Height="29" VerticalContentAlignment="Center" SelectedIndex="{Binding FilterRotateIndex}">
                                <ComboBoxItem Content="0°" />
                                <ComboBoxItem Content="90°" />
                                <ComboBoxItem Content="180°" />
                                <ComboBoxItem Content="270°" />
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="GroupBoxDeinterlace" Header="{lex:Loc}" HorizontalAlignment="Left" Height="92" Margin="14,107,0,0" VerticalAlignment="Top" Width="274" mah:ControlsHelper.ContentCharacterCasing="Normal">
                        <Grid IsEnabled="{Binding IsOn, ElementName=ToggleSwitchFilterDeinterlace}">
                            <Label x:Name="LabelDeinterlace" Content="{lex:Loc}" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Height="28" />
                            <ComboBox x:Name="ComboBoxFiltersDeinterlace" HorizontalAlignment="Left" Margin="85,20,0,0" VerticalAlignment="Top" Width="169" Height="29" VerticalContentAlignment="Center" SelectedIndex="{Binding FilterDeinterlaceIndex}">
