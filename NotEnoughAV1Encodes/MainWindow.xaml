                                <ComboBoxItem Content="{lex:Loc SortByFramecountDesc}"/>
                                <ComboBoxItem Content="{lex:Loc SortByOutNameAsc}"/>
                                <ComboBoxItem Content="{lex:Loc SortByOutNameDesc}"/>
