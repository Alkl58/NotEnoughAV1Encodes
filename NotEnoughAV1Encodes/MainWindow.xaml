                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60" />
                                                        <ColumnDefinition MinWidth="80" />
                                                        <ColumnDefinition Width="90" />
                                                        <ColumnDefinition MinWidth="50"/>
                                                        <ColumnDefinition Width="90" />
