<mah:MetroWindow x:Class="NotEnoughAV1Encodes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:NotEnoughAV1Encodes"
        mc:Ignorable="d"
        Title="NotEnoughAV1Encodes" Height="650" Width="1085" ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="b2v"/>
    </Window.Resources>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="Normal"/>
    </Window.TaskbarItemInfo>
    <Grid>
        <Image x:Name="imgDynamic" Stretch="UniformToFill"/>
        <Button x:Name="ButtonOpenSource" Margin="21,20,0,0" VerticalAlignment="Top" Height="48" HorizontalAlignment="Left" Width="138" Background="{x:Null}" Click="ButtonOpenSource_Click" BorderBrush="#FF707070">
            <Canvas HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="100">
                <Image HorizontalAlignment="Left" Height="51" VerticalAlignment="Top" Width="48" Source="img/video1.png" Canvas.Top="-7" Canvas.Left="-4"/>
                <Label Content="Source" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.463,0.491" Canvas.Left="44" Height="30" Canvas.Top="2" FontSize="13" />
            </Canvas>
        </Button>
        <mah:MetroAnimatedSingleRowTabControl x:Name="MetroTab" Margin="21,116,23,63" Background="{x:Null}">
            <mah:MetroTabItem Header="Summary">
                <Grid x:Name="Grid0">
                    <GroupBox Header="Current Encoding Settings" Margin="105,89,105,0" Height="163" VerticalAlignment="Top">
                        <Grid>
                            <Label Content="Encoder:" HorizontalAlignment="Left" Margin="15,13,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                            <Label Content="{Binding Text, ElementName=ComboBoxVideoEncoder, UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left" Margin="94,13,0,0" VerticalAlignment="Top" Width="140"/>
                            <Label Content="Bit-Depth:" HorizontalAlignment="Left" Margin="15,42,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                            <Label Content="{Binding Text, ElementName=ComboBoxVideoBitDepth, UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left" Margin="94,42,0,0" VerticalAlignment="Top" Width="140"/>
                            <Label Content="Speed:" HorizontalAlignment="Left" Margin="15,71,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                            <Label Content="{Binding Value, ElementName=SliderVideoSpeed, UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left" Margin="94,71,0,0" VerticalAlignment="Top" Width="140"/>
                            <Label Content="Passes:" HorizontalAlignment="Left" Margin="15,100,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                            <Label Content="{Binding Text, ElementName=ComboBoxVideoPasses, UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left" Margin="94,100,0,0" VerticalAlignment="Top" Width="140"/>
                            <Label Content="Splitting Method:" HorizontalAlignment="Right" Margin="0,13,450,0" VerticalAlignment="Top" FontWeight="Bold"/>
                            <Label Content="{Binding Text, ElementName=ComboBoxSplittingMethod, UpdateSourceTrigger=PropertyChanged}" Margin="0,13,302,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="140"/>
                            <Label Content="Worker  Count:" HorizontalAlignment="Right" Margin="0,42,464,0" VerticalAlignment="Top" FontWeight="Bold"/>
                            <Label Content="{Binding Text, ElementName=ComboBoxWorkerCount, UpdateSourceTrigger=PropertyChanged}" Margin="0,42,302,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="140"/>
                        </Grid>
                    </GroupBox>
                    <Label Content="Source:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Label Content="Destination:" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxVideoSource" Height="29" Margin="105,10,105,0" TextWrapping="Wrap" Text="No Source Selected" VerticalAlignment="Top" FontStyle="Italic" VerticalContentAlignment="Center" IsReadOnly="True" BorderBrush="{x:Null}" Background="{x:Null}"/>
                    <TextBox x:Name="TextBoxVideoDestination" Height="29" Margin="105,39,105,0" TextWrapping="Wrap" Text="No Destination Selected" VerticalAlignment="Top" FontStyle="Italic" VerticalContentAlignment="Center" IsReadOnly="True" BorderBrush="{x:Null}" Background="{x:Null}"/>
                </Grid>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Splitting">
                <Grid Background="{Binding ElementName=Grid0, Path=Background, UpdateSourceTrigger=PropertyChanged}">
                    <GroupBox Header="Splitting" HorizontalAlignment="Left" Height="201" Margin="22,20,0,0" VerticalAlignment="Top" Width="350"/>
                    <GroupBox Header="Trim Start" HorizontalAlignment="Left" Height="211" Margin="389,142,0,0" VerticalAlignment="Top" Width="311">
                        <Image x:Name="ImagePreviewTrimStart" Margin="0,0,0,0" Height="180" VerticalAlignment="Top" HorizontalAlignment="Right" Width="300" Stretch="Fill" Source="img\offline.png"/>
                    </GroupBox>
                    <GroupBox Header="Trim End" HorizontalAlignment="Left" Height="211" Margin="710,142,0,0" VerticalAlignment="Top" Width="311">
                        <Image x:Name="ImagePreviewTrimEnd" Margin="0,0,0,0" HorizontalAlignment="Right" Stretch="Fill" Width="300" Source="img\offline.png"/>
                    </GroupBox>
                    <TextBox x:Name="TextBoxTrimStart"  HorizontalAlignment="Left" Height="26" Margin="491,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsTabStop="False" Text="00:00:00.000" TextChanged="TextBoxTrimEnd_TextChanged" />
                    <TextBox x:Name="TextBoxTrimEnd" HorizontalAlignment="Left" Height="26" Margin="815,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsTabStop="False" Text="00:23:00.000" TextChanged="TextBoxTrimEnd_TextChanged"/>
                    <Button x:Name="ButtonTrimPlus" Content="+" HorizontalAlignment="Left" Margin="591,142,0,0" VerticalAlignment="Top" Width="25" Height="26" Click="ButtonTrimPlus_Click"/>
                    <Button x:Name="ButtonTrimMinus" Content="-" HorizontalAlignment="Left" Margin="466,142,0,0" VerticalAlignment="Top" Width="25" Height="26" Click="ButtonTrimMinus_Click"/>
                    <Button x:Name="ButtonTrimPlusEnd" Content="+" HorizontalAlignment="Left" Margin="916,142,0,0" VerticalAlignment="Top" Width="25" Height="26" Click="ButtonTrimPlusEnd_Click" />
                    <Button x:Name="ButtonTrimMinusEnd" Content="-" HorizontalAlignment="Left" Margin="790,142,0,0" VerticalAlignment="Top" Width="25" Height="26" Click="ButtonTrimMinusEnd_Click"  />
                    <Label Content="Splitting Method:" HorizontalAlignment="Left" Margin="57,57,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="ComboBoxSplittingMethod" HorizontalAlignment="Left" Margin="179,57,0,0" VerticalAlignment="Top" Width="168" Height="29" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Scene Detect (ffmpeg)" IsSelected="True"/>
                        <ComboBoxItem Content="PySceneDetect"/>
                        <ComboBoxItem Content="Equal Chunking"/>
                    </ComboBox>
                    <Label Content="Threshold:" HorizontalAlignment="Left" Margin="57,107,0,0" VerticalAlignment="Top">
                        <Label.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=ComboBoxSplittingMethod}" Value="0">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                    <TextBox x:Name="TextBoxSplittingThreshold" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="27" Margin="179,109,0,0" TextWrapping="Wrap" Text="0.3" VerticalAlignment="Top" Width="55" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=ComboBoxSplittingMethod}" Value="0">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <ComboBox x:Name="ComboBoxSplittingReencodeMethod" HorizontalAlignment="Left" Margin="179,149,0,0" VerticalAlignment="Top" Width="81" Height="29" VerticalContentAlignment="Center">
                        <ComboBox.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=ComboBoxSplittingMethod}" Value="2">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                        <ComboBoxItem Content="x264" IsSelected="True"/>
                        <ComboBoxItem Content="ffv1"/>
                        <ComboBoxItem Content="utvideo"/>
                    </ComboBox>
                    <CheckBox x:Name="CheckBoxSplittingReencode" Content="Re-Encode:" HorizontalAlignment="Left" Margin="60,156,0,0" VerticalAlignment="Top" IsChecked="True">
                        <CheckBox.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=ComboBoxSplittingMethod}" Value="2">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>
                    <Label Content="Chunk-Length:" HorizontalAlignment="Left" Margin="57,107,0,0" VerticalAlignment="Top">
                        <Label.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=ComboBoxSplittingMethod}" Value="2">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                    <TextBox x:Name="TextBoxSplittingChunkLength" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="27" Margin="179,109,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="81" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=ComboBoxSplittingMethod}" Value="2">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Label Content="(in seconds)" HorizontalAlignment="Left" Margin="265,107,0,0" VerticalAlignment="Top" FontStyle="Italic">
                        <Label.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=ComboBoxSplittingMethod}" Value="2">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                    <Label Content="Worker Count:" HorizontalAlignment="Left" Margin="57,265,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="ComboBoxWorkerCount" HorizontalAlignment="Left" Margin="179,265,0,0" VerticalAlignment="Top" Width="86" Height="29"/>
                    <Label Content="Process Priority:" HorizontalAlignment="Left" Margin="57,308,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="ComboBoxProcessPriority" HorizontalAlignment="Left" Margin="179,308,0,0" VerticalAlignment="Top" Width="168" Height="29">
                        <ComboBoxItem Content="Normal" IsSelected="True"/>
                        <ComboBoxItem Content="Below Normal"/>
                    </ComboBox>
                    <Label Content="(Soft Subs not supported)" HorizontalAlignment="Left" Margin="484,115,0,0" VerticalAlignment="Top"/>
                    <GroupBox Header="Workers" HorizontalAlignment="Left" Height="127" Margin="22,226,0,0" VerticalAlignment="Top" Width="350"/>
                    <mah:ToggleSwitch x:Name="ToggleSwitchTrimming" Header="" Toggled="CheckBoxTrimming_Checked" HorizontalAlignment="Left" Height="100" Margin="389,89,0,0" VerticalAlignment="Top" Width="100"/>
                </Grid>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Filters">
                <Grid Background="{Binding ElementName=Grid0, Path=Background, UpdateSourceTrigger=PropertyChanged}">
                    <GroupBox Header="Crop" HorizontalAlignment="Left" Height="203" Margin="22,20,0,0" VerticalAlignment="Top" Width="274">
                        <Grid IsEnabled="{Binding IsOn, ElementName=ToggleSwitchFilterCrop}">
                            <TextBox x:Name="TextBoxFiltersCropLeft" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="26" Margin="44,78,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="55" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="TextBoxFiltersCropRight" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="26" Margin="155,78,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="55" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="TextBoxFiltersCropTop" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="26" Margin="100,46,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="55" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="TextBoxFiltersCropBottom" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="26" Margin="100,110,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="55" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <Label Content="Bottom" HorizontalAlignment="Left" Margin="100,136,0,0" VerticalAlignment="Top" Width="55"/>
                            <Label Content="Top" HorizontalAlignment="Left" Margin="112,16,0,0" VerticalAlignment="Top"/>
                            <Label Content="Left" HorizontalAlignment="Left" Margin="11,78,0,0" VerticalAlignment="Top" Height="26"/>
                            <Label Content="Right" HorizontalAlignment="Left" Margin="210,76,0,0" VerticalAlignment="Top" Height="30"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Resize" HorizontalAlignment="Left" Height="203" Margin="302,20,0,0" VerticalAlignment="Top" Width="285" >
                        <Grid IsEnabled="{Binding IsOn, ElementName=ToggleSwitchFilterResize}">
                            <Label Content="Scaling Algorithm:" HorizontalAlignment="Left" Margin="32,94,0,0" VerticalAlignment="Top" Height="28"/>
                            <ComboBox x:Name="ComboBoxFiltersScaling" HorizontalAlignment="Left" Margin="139,92,0,0" VerticalAlignment="Top" Width="120" Height="30" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="fast_bilinear"/>
                                <ComboBoxItem Content="bilinear"/>
                                <ComboBoxItem Content="bicubic" IsSelected="True"/>
                                <ComboBoxItem Content="experimental"/>
                                <ComboBoxItem Content="neighbor"/>
                                <ComboBoxItem Content="area"/>
                                <ComboBoxItem Content="bicublin"/>
                                <ComboBoxItem Content="gauss"/>
                                <ComboBoxItem Content="sinc"/>
                                <ComboBoxItem Content="lanczos"/>
                                <ComboBoxItem Content="spline"/>
                            </ComboBox>
                            <Label Content="Width:" HorizontalAlignment="Left" Margin="19,48,0,0" VerticalAlignment="Top" Height="28"/>
                            <TextBox x:Name="TextBoxFiltersResizeWidth" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="28" Margin="71,46,0,0" TextWrapping="Wrap" Text="1920" VerticalAlignment="Top" Width="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <Label Content="Height:" HorizontalAlignment="Left" Margin="141,48,0,0" VerticalAlignment="Top" Height="28"/>
                            <TextBox x:Name="TextBoxFiltersResizeHeight" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="28" Margin="199,46,0,0" TextWrapping="Wrap" Text="1080" VerticalAlignment="Top" Width="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Rotate" HorizontalAlignment="Left" Height="90" Margin="596,20,0,0" VerticalAlignment="Top" Width="285">
                        <Grid IsEnabled="{Binding IsOn, ElementName=ToggleSwitchFilterRotate}">
                            <Label Content="Rotate (Clockwise):" HorizontalAlignment="Left" Margin="36,18,0,0" VerticalAlignment="Top" Height="28"/>
                            <ComboBox x:Name="ComboBoxFiltersRotate" HorizontalAlignment="Left" Margin="151,18,0,0" VerticalAlignment="Top" Width="65" Height="29" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="0°" IsSelected="True"/>
                                <ComboBoxItem Content="90°"/>
                                <ComboBoxItem Content="180°"/>
                                <ComboBoxItem Content="270°"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Deinterlace" HorizontalAlignment="Left" Height="95" Margin="596,125,0,0" VerticalAlignment="Top" Width="285">
                        <Grid IsEnabled="{Binding IsOn, ElementName=ToggleSwitchFilterDeinterlace}">
                            <Label Content="Deinterlace (Yadif):" HorizontalAlignment="Left" Margin="39,21,0,0" VerticalAlignment="Top" Height="28"/>
                            <ComboBox x:Name="ComboBoxFiltersDeinterlace" HorizontalAlignment="Left" Margin="152,20,0,0" VerticalAlignment="Top" Width="65" Height="29" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="1" IsSelected="True"/>
                                <ComboBoxItem Content="0"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                    <mah:ToggleSwitch x:Name="ToggleSwitchFilterCrop" Header="" Toggled="CheckBoxTrimming_Checked" HorizontalAlignment="Left" Height="100" Margin="64,-6,0,0" VerticalAlignment="Top" Width="100"/>
                    <mah:ToggleSwitch x:Name="ToggleSwitchFilterResize" Header="" Toggled="CheckBoxTrimming_Checked" HorizontalAlignment="Left" Height="100" Margin="349,-6,0,0" VerticalAlignment="Top" Width="100"/>
                    <mah:ToggleSwitch x:Name="ToggleSwitchFilterRotate" Header="" Toggled="CheckBoxTrimming_Checked" HorizontalAlignment="Left" Height="100" Margin="651,-6,0,0" VerticalAlignment="Top" Width="100"/>
                    <mah:ToggleSwitch x:Name="ToggleSwitchFilterDeinterlace" Header="" Toggled="CheckBoxTrimming_Checked" HorizontalAlignment="Left" Height="100" Margin="681,99,0,0" VerticalAlignment="Top" Width="100"/>
                </Grid>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Video">
                <Grid Background="{Binding ElementName=Grid0, Path=Background, UpdateSourceTrigger=PropertyChanged}">
                    <GroupBox Header="Video" HorizontalAlignment="Left" Height="190" Margin="10,10,0,0" VerticalAlignment="Top" Width="372">
                        <Grid>
                            <Label Content="Encoder:" HorizontalAlignment="Left" Margin="30,32,0,0" VerticalAlignment="Top"/>
                            <ComboBox x:Name="ComboBoxVideoEncoder" HorizontalAlignment="Left" Margin="110,32,0,0" VerticalAlignment="Top" Width="128" Height="28" VerticalContentAlignment="Center" SelectionChanged="ComboBoxVideoEncoder_SelectionChanged">
                                <ComboBoxItem Content="aomenc" IsSelected="True"/>
                                <ComboBoxItem Content="rav1e"/>
                                <ComboBoxItem Content="svt-av1"/>
                            </ComboBox>
                            <Label Content="Bit-Depth:" HorizontalAlignment="Left" Margin="30,72,0,0" VerticalAlignment="Top"/>
                            <ComboBox x:Name="ComboBoxVideoBitDepth" HorizontalAlignment="Left" Margin="110,72,0,0" VerticalAlignment="Top" Width="60" Height="30" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="8" IsSelected="True"/>
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="12"/>
                            </ComboBox>
                            <Label Content="VFR:" HorizontalAlignment="Left" Margin="30,116,0,0" VerticalAlignment="Top"/>
                            <Label Content="(only MKV Input / Output)" HorizontalAlignment="Left" Margin="189,116,0,0" VerticalAlignment="Top"/>

                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Quality" Height="190" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="542">
                        <Grid>
                            <RadioButton x:Name="RadioButtonVideoConstantQuality" Content="Constant Quality:" HorizontalAlignment="Left" Margin="42,19,0,0" VerticalAlignment="Top" Height="29" RenderTransformOrigin="0.504,0.192" VerticalContentAlignment="Center" IsChecked="True" Background="{x:Null}"/>
                            <Slider x:Name="SliderVideoQuality" IsEnabled="{Binding IsChecked, ElementName=RadioButtonVideoConstantQuality}" HorizontalAlignment="Left" Margin="60,53,0,0" VerticalAlignment="Top" Width="431" TickPlacement="BottomRight" Maximum="63" Value="28" SmallChange="1" IsSnapToTickEnabled="True" Height="28" IsDirectionReversed="True" Foreground="#FF595959"/>
                            <Label x:Name="LabelVideoQuality" IsEnabled="{Binding IsChecked, ElementName=RadioButtonVideoConstantQuality}" Content="{Binding Value, ElementName=SliderVideoQuality, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="172,18,0,0" VerticalAlignment="Top"/>
                            <Label Content="| Lowest Quality" HorizontalAlignment="Left" Margin="59,76,0,0" VerticalAlignment="Top" FontSize="9" Width="79" Foreground="#FF595959"/>
                            <Label Content="Highest Quality |" HorizontalAlignment="Left" Margin="416,76,0,0" VerticalAlignment="Top" FontSize="9" Width="79" Foreground="#FF595959"/>
                            <RadioButton x:Name="RadioButtonVideoBitrate" Content="Bitrate (kbps):" HorizontalAlignment="Left" Margin="42,119,0,0" VerticalAlignment="Top" Width="125" Height="29" VerticalContentAlignment="Center" Background="{x:Null}"/>
                            <TextBox x:Name="TextBoxVideoBitrate" PreviewTextInput="NumberValidationTextBox" IsEnabled="{Binding IsChecked, ElementName=RadioButtonVideoBitrate}" HorizontalAlignment="Left" Height="29" Margin="167,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Optimisation" HorizontalAlignment="Left" Margin="10,0,0,10" Width="372" Height="168" VerticalAlignment="Bottom">
                        <Grid>
                            <CheckBox x:Name="CheckBoxVideoAomencRealTime" Content="Real Time Mode" HorizontalAlignment="Left" Margin="246,41,0,0" VerticalAlignment="Top" Checked="CheckBoxVideoAomencRealTime_Checked" Visibility="Visible"/>
                            <Label Content="Speed:" HorizontalAlignment="Left" Margin="29,30,0,0" VerticalAlignment="Top"/>
                            <Slider x:Name="SliderVideoSpeed" HorizontalAlignment="Left" Margin="110,37,0,0" VerticalAlignment="Top" Width="127" Height="29" TickPlacement="BottomRight" Foreground="#FF595959" Maximum="9" Value="4" SmallChange="0" IsSnapToTickEnabled="True" ValueChanged="SliderVideoSpeed_ValueChanged"/>
                            <Label x:Name="LabelVideoSpeed" Content="{Binding Value, ElementName=SliderVideoSpeed, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="81,30,0,0" VerticalAlignment="Top"/>
                            <Label Content="Passes:" HorizontalAlignment="Left" Margin="29,90,0,0" VerticalAlignment="Top"/>
                            <ComboBox x:Name="ComboBoxVideoPasses" HorizontalAlignment="Left" Margin="110,90,0,0" VerticalAlignment="Top" Width="60" Height="29" VerticalContentAlignment="Center" SelectionChanged="ComboBoxVideoPasses_SelectionChanged">
                                <ComboBoxItem Content="1" IsSelected="True"/>
                                <ComboBoxItem Content="2"/>
                            </ComboBox>
                            <Label Content="| Slowest" HorizontalAlignment="Left" Margin="109,59,0,0" VerticalAlignment="Top" FontSize="9" Width="79"/>
                            <Label Content="Fastest |" HorizontalAlignment="Left" Margin="196,59,0,0" VerticalAlignment="Top" FontSize="9" Width="79"/>
                            <mah:ToggleSwitch x:Name="ToggleSwitchAdvancedVideoSettings" Header="Advanced Video Settings" HorizontalAlignment="Left" Height="100" Margin="256,75,0,-42" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.44,0.39"/>
                        </Grid>
                    </GroupBox>
                    <mah:ToggleSwitch x:Name="ToggleSwitchVFR" Header="" HorizontalAlignment="Left" Height="100" Margin="126,130,0,0" VerticalAlignment="Top" Width="100"/>
                </Grid>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Advanced Settings" Visibility="{Binding ElementName=ToggleSwitchAdvancedVideoSettings, Path=IsOn, Converter={StaticResource b2v}}">
                <Grid Background="{Binding ElementName=Grid0, Path=Background, UpdateSourceTrigger=PropertyChanged}">
                    <Label Content="Advanced Settings" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Canvas HorizontalAlignment="Left" Height="237" VerticalAlignment="Top" Width="947" Margin="0,41,0,0">
                        <Canvas.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=ComboBoxVideoEncoder}" Value="2">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Canvas.Style>
                        <Label x:Name="LabelSVTAV1TileColumns" Content="Tile Columns:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="56" Canvas.Top="17" />
                        <Label x:Name="LabelSVTAV1TileRows" Content="Tile Rows:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="56" Canvas.Top="51" />
                        <ComboBox x:Name="ComboBoxSVTAV1TileColumns"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Canvas.Left="184" Canvas.Top="17" Height="29" VerticalContentAlignment="Center" RenderTransformOrigin="0.722,0.448">
                            <ComboBoxItem Content="0" IsSelected="True"/>
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                        </ComboBox>
                        <ComboBox x:Name="ComboBoxSVTAV1TileRows"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Canvas.Left="184" Canvas.Top="51" Height="29" VerticalContentAlignment="Center" RenderTransformOrigin="0.722,0.448">
                            <ComboBoxItem Content="0" IsSelected="True"/>
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                        </ComboBox>
