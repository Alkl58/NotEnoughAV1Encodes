<mah:MetroWindow x:Class="NotEnoughAV1Encodes.Views.SavePresetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotEnoughAV1Encodes.Views"
        mc:Ignorable="d"
        Title="Save Preset" Height="150" Width="300" ResizeMode="NoResize" mah:ControlsHelper.ContentCharacterCasing="Normal">
    <Grid>
        <Label Content="{DynamicResource presetName}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="TextBoxPresetName" HorizontalAlignment="Left" Margin="110,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="ButtonSave" Content="{DynamicResource saveAndExit}" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Width="280" mah:ControlsHelper.ContentCharacterCasing="Normal" Click="ButtonSave_Click"/>

    </Grid>
</mah:MetroWindow>
